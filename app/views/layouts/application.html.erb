<div class="span3">

  	<%= form_tag(recommendations_path, :method => "get", id: "search-form") do %>
	<%= text_field_tag :search, params[:search], placeholder: "Search Recommendations" %>

	<%= submit_tag "Search" %>

	<% end %>
	</div>
	
	-->



        <div class="span9">


          <%= bootstrap_flash %>


          <%= yield %>
        </div>
      </div><!--/row-->


      <footer>
        <p>&copy; 8sw 2013</p>
      </footer>

    </div> <!-- /container -->

  </body>
</html>
