      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>


    <%= javascript_include_tag "application" %>

  
  </head>
  <body>


    <div class="navbar navbar-fluid-top">
      
    

      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
        
          <a class="brand" href="/">Eight Spoked Wheel</a>

          <div class="container-fluid nav-collapse">
            <ul class="nav">
              <li><%= link_to "Identity Hub", "/"  %></li>
              <li><%= link_to "Clothing", "/clothing"  %></li>
              <li><%= link_to "Accessories", "/accessories"  %></li>
              <li><%= link_to "Literature", "/literature"  %></li>
              <li><%= link_to "Travel", "/travel"  %></li>
              <li><%= link_to "Health", "/health"  %></li>
            <% if user_signed_in? %> 
            
           <li> <%= menu_text "Signed in as #{current_user.email} " %> </li>
            <li>  <%= link_to "Log-out", destroy_user_session_path, method: :delete %> </li>
            
            <% end %>

            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Menu</li>
<li> <%=link_to "Log-in", new_user_session_path %> </li> 
<li> <%=link_to "Register", new_user_registration_path %> </li> 
<li> <%=link_to "Questions", questions_path %> </li> 
<li> <%=link_to "Contact", contact_path %> </li>
<li> <%= link_to 'Recommendations', recommendations_path, :method=> "get" %> </li> 


            </ul>
          </div><!--/.well -->
        </div><!--/span-->
